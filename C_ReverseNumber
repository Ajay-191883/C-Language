#include<math.h>
#include<stdio.h>
int main()
{
int num,rem;
printf("This is a program to reverse the order of any number so, input any number...");
scanf("%d",&num);
printf("Reversed order of entered number is...");
    while(num>0)
    {
    rem=num%10;
    num=num/10;
    printf("%d",rem);
    }
return 0;
}
